<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" tools:context=".MainActivity">

    <TextView
        android:id="@+id/loginTextView"
        android:text="No account saved!"
        android:gravity="center_horizontal"
        android:background="#262626"
        android:textColor="#EE4444"
        style="@style/HorizontalFull"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <EditText
        android:id="@+id/titleEditText"
        android:hint="Enter a title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DefaultPadding"/>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/imgurImageView"
        android:adjustViewBounds="true"
        android:maxHeight="250dp"
        android:maxWidth="250dp"
        android:minHeight="200dp"
        android:minWidth="250dp"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/defaultimage"
        style="@style/DefaultPadding"/>

    <EditText
        android:id="@+id/descriptionEditText"
        android:hint="Optional description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DefaultPadding" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/postButton"
            android:text="Post Anonymously"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/galleryPostButton"
            android:text="Post to Gallery!"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/albumButton"
            android:text="Create New Album"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/editAlbumButton"
            android:text="Add to Existing Album"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
