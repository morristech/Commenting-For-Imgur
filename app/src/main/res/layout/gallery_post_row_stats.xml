<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#181817"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:id="@+id/stats_row_1"
        android:orientation="horizontal"
        android:background="#262626"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/upvoteStatsRowButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/upvoteinactivetransparent32p"
            android:background="#262626"
            style="@style/DefaultPadding"/>

        <ImageButton
            android:id="@+id/downvoteStatsRowButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/downvoteinactivetransparent32p"
            android:background="#262626"
            style="@style/DefaultPadding" />

        <ImageButton
            android:id="@+id/favoriteStatsRowButton"
            android:textColor="#F2F2F2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/inactivefavoritetransparent32p"
            android:background="#262626"
            style="@style/DefaultPadding" />

            <LinearLayout
                android:id="@+id/stats_row_11"
                android:orientation="vertical"
                android:background="#262626"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/stats_row_13"
                    android:orientation="horizontal"
                    android:background="#262626"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/statsUpvoteTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        android:text="12,345"
                        android:textColor="#85BF25"
                        android:singleLine="true"
                        android:ellipsize="end" />
                    <TextView
                        android:id="@+id/statsDownvoteTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="13sp"
                        android:text="5,555"
                        android:textColor="#EE4444"
                        android:singleLine="true"
                        android:ellipsize="end" />

                </LinearLayout>

                <TextView
                    android:id="@+id/statsViewsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:text="12,345"
                    android:textColor="#FFFFEE"
                    android:singleLine="true"
                    android:ellipsize="end" />

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stats_row_2"
        android:orientation="horizontal"
        android:background="#181817"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#181817"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/commentEditText"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Post a comment"
                android:minHeight="60dp"
                android:maxLength="1200"
                android:textColor="#F2F2F2"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp"
                android:padding="15dp"
                android:background="#1C1C1C" />

            <TextView
                android:id="@+id/charCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="12sp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="0/1200"
                android:textColor="#FFFFEE"
                android:background="#1C1C1C"
                android:singleLine="true" />

        </LinearLayout>
        <Button
            android:id="@+id/replyToPostButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#F2F2F2"
            android:background="#306FDB" />

    </LinearLayout>

</LinearLayout>