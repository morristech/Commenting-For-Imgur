<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626">

    <TextView
        android:id="@+id/profile_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#F2F2F2"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/profile_points_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="REPUTATION"
            android:textSize="10sp"
            android:textColor="#add8e6"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/profile_time_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="MONTH YEAR"
            android:textSize="10sp"
            android:textColor="#F2F2F2"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>

<!--    <TextView
        android:id="@+id/profile_text_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="fillerText"
        android:textSize="10sp"
        android:textColor="#F2F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>-->
    <Button
        android:id="@+id/profile_messaging_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MESSAGING TEST"
        android:textSize="10sp"
        android:layout_gravity="center"
        android:textColor="#F2F2F2"
        android:layout_margin="20dp"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/profile_bio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Show Bio"
        android:textColor="#F2F2F2"
        android:textSize="12sp"
        android:background="@drawable/round_profile_button"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <ScrollView
        android:id="@+id/profile_text_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/profile_text_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F2F2F2"
            android:autoLink="web"
            android:padding="10dp"/>
    </ScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/pager_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#131313"
            android:textColor="#F2F2F2"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />

    </android.support.v4.view.ViewPager>

</LinearLayout>